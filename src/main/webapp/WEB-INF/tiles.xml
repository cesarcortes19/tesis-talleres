<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE tiles-definitions PUBLIC
        "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN"
        "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">

<tiles-definitions>

    <!--Contiene la confifuracion de la pantalla-->
    <definition name="mainTemplate" template="/pages/mainTemplate.jsp">
        <put-attribute name="title"  value="User Registration Form"/>
        <put-attribute name="header" value="/pages/header.jsp"/>
        <put-attribute name="body"   value="/pages/body.jsp"/>
        <put-attribute name="footer"   value="/pages/footer.jsp"/>
    </definition>

    <!--Talleres-->
    <definition name="carteleraPrincipal" extends="mainTemplate">
        <put-attribute name="title"  value="Cartelera"/>
        <put-attribute name="body"   value="/pages/talleres/talleresPrincipal.jsp"/>
    </definition>

    <!--usuario-->
    <definition name="crearUsuario" extends="mainTemplate">
        <put-attribute name="title"  value="Usuario"/>
        <put-attribute name="body"   value="/pages/usuario/crearUsuario.jsp"/>
    </definition>


    <!--ERROR-->
    <definition name="ERROR" extends="mainTemplate">
        <put-attribute name="title"  value="ERROR"/>
        <put-attribute name="body"   value="/pages/error.jsp"/>
    </definition>


</tiles-definitions>