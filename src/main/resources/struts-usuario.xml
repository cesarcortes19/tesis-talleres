<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <package name="usuario" namespace="/usuario" extends="default,json-default">

        <action name="*Usuario" class="UsuarioAction" method="{1}">
            <result name="crearUsuario" type="tiles">crearUsuario</result>
            <result name="input" type="tiles">crearUsuario</result>
            <result name="success" type="tiles">crearUsuario</result>
        </action>

        <action name="cargarAlumnosJson" class="GridAlumnoAction" method="{1}">
            <result name="success" type="json">
                <param name="includeProperties">
                    ^gridModel\[\d+\]\.id,
                    ^gridModel\[\d+\]\.name,
                    ^gridModel\[\d+\]\.email,
                    ^gridModel\[\d+\]\.status,
                    ^gridModel\[\d+\]\.roleModel\.idRole,
                    ^gridModel\[\d+\]\.roleModel\.nameRole,
                    ^gridModel\[\d+\]\.lastLoginDate,
                    ^gridModel\[\d+\]\.lastModified,
                    ^gridModel\[\d+\]\.lastModifiedBy
                </param>
            </result>
        </action>

    </package>

</struts>
