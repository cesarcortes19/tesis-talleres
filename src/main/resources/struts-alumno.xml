<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
        "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

    <package name="alumno" namespace="/administrador/alumno" extends="default,json-default">

        <action name="*Alumno" class="AlumnoAction" method="{1}">

        </action>

        <action name="*AlumnosJson" class="GridAlumnoAction" method="{1}">
            <result name="success" type="json">
                <param name="includeProperties">
                    ^gridModel\[\d+\]\.id,
                    ^gridModel\[\d+\]\.nombre,
                    ^gridModel\[\d+\]\.apellido,
                    ^gridModel\[\d+\]\.grado,
                    ^gridModel\[\d+\]\.seccion,
                    ^gridModel\[\d+\]\.edad,
                </param>
            </result>
        </action>

    </package>

</struts>
