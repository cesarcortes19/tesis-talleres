<?xml version="1.0"?>
<!DOCTYPE validators PUBLIC
        "-//Apache Struts//XWork Validator 1.0.2//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.2.dtd">
<validators>
    <field name="tallerModel.name">
        <field-validator type="requiredstring">
            <message key="requiredstring"/>
        </field-validator>
    </field>

    <field name="tallerModel.descripcion">
        <field-validator type="requiredstring">
            <message key="requiredstring"/>
        </field-validator>
    </field>

    <field name="tallerModel.cantidadAlumnosMaxima">
        <field-validator type="int">
            <param name="min">1</param>
            <message key="requiredstring"/>
        </field-validator>
    </field>

    <field name="tallerModel.costoInscripcion">
        <field-validator type="double">
            <param name="minInclusive">1.0</param>
            <param name="maxInclusive">50000000.1</param>
            <message key="requiredstring"/>
        </field-validator>
    </field>
    <field name="tallerModel.costo">
        <field-validator type="double">
            <param name="minInclusive">1.0</param>
            <param name="maxInclusive">50000000.1</param>
            <message key="requiredstring"/>
        </field-validator>
    </field>
</validators>
